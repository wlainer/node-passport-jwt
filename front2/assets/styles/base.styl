a, a:focus, a:hover
  color: font_color

html, body
  height: 100%
  background-color: background_color
  color: font_color
  text-align: center
  text-shadow: 0 1px 3px rgba(0,0,0,.5)

.site-wrapper
  display: table
  width: 100%
  height: 100%
  min-height: 100%
  box-shadow: inset 0 0 100px rgba(0,0,0,.5)

.site-wrapper-inner
  display: table-cell
  vertical-align: top

.cover-container
  margin-right: auto
  margin-left: auto

.inner
  padding: 30px

//- Header

.masthead-brand
  margin-top: 10px
  margin-bottom: 10px

  li
    display: inline-block

.masthead-nav
  & > li
    display inline-block
    & + li
      margin-left 20px
    & > a
      padding-right: 0
      padding-left: 0
      font-size: 16px
      font-weight: bold
      color: rgba(255,255,255,.75)
      border-bottom: 2px solid transparent

      &:hover, &:focus
        background-color: transparent
        border-bottom-color: rgba(255,255,255,.25)
  & > .active
    & > a, & > a:hover, > a:focus
      color: font_color
      border-bottom-color: font_color

@media (min-width: 768px)
  .masthead-brand
    float: left
  .masthead-nav
    float: right

//- Cover

.cover
  padding: 0 20px

  .padded
    padding: 15px 0

  .thumbnail
    height: 130px
    background-color: white
    overflow: hidden
    display: table-cell
    vertical-align: middle

  .btn-lg
    margin-top: 30px
    padding: 10px 20px
    font-weight: bold

//- Footer

.mastfoot
  color: rgba(255,255,255,.5)

//- Affix and center

@media (min-width: 768px)
  .masthead
    position: fixed
    top: 0

  .mastfoot
    position: fixed
    bottom: 0

  .site-wrapper-inner
    vertical-align: middle

  .masthead, .mastfoot, .cover-container
    width: 100%

@media (min-width: 992px)
  .masthead, .mastfoot, .cover-container
    width: 700px
